def temperature():
  print("1. Celsius to Fahrenheit")
  print("2. Fahremheit to Celsius")
  choise = input("Enter your choise: ")
  if choise == '1':  # Use string comparison for input
      temp = float(input("Enter temperature in Celsius: "))
      d = temp * 9/5 + 32
      print(temp,"degree celsius is equal to",d,"degree Fahrenheit")
  elif choise == '2':  # Use elif to handle the second case
      temp = float(input("Enter temperature in Fahrenheit: "))
      d = (temp - 32) * 5/9
      print(temp,"degree Fahrenheit is equal to",d,"degree Celsius")


def currency():
   print("1. For USD to INR")
   print("2.For INR to USD")
   choise = int(input("Enter your choise: "))
   if choise == 1:
      a = (float(input("Enter USD value")))
      b = a * 83
      print(b," INR")
   elif choise == 2:
      a = float(input("Enter INR value"))
      b = a / 83
      print(b," USD") 


def length():
   print("1. For Centimeter to Meter ")
   print("2. For Meter to Centimeter")
   choise = int(input("Enter your choise: "))
   if choise == 1:
      a = float(input("Enter value: "))
      b = a * 0.01
      print(b,"meter")
   elif choise == 2:
      a = float(input("Enter value: "))
      b = a * 100
      print(b,"centimeter")


